{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext"],
    "sourceMap": false,
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "baseUrl": "src",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": false,
    "outDir": "./dist/types",
    "paths": {
      "@lib/*": ["lib/*"],
      "@providers/*": ["providers/*"]
    }
  },
  "include": ["src/**/*", "env.d.ts", "rollup.config.ts"]
}
